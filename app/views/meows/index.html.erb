<h1>Lovely Meows!</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meows.each do |meow| %>
      <tr>
        <td><%= meow.message %></td>
        <td><%= link_to 'Show', meow %></td>
        <td><%= link_to 'Edit', edit_meow_path(meow) %></td>
        <td><%= link_to 'Destroy', meow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meow', new_meow_path %>
